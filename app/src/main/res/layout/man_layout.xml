<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manLayout"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/manSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/manSpeaking0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            tools:text="Man Speaking0" />

        <TextView
            android:id="@+id/manSpeaking1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            tools:text="Man Speaking1" />

        <TextView
            android:id="@+id/manSpeaking2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            tools:text="Man Speaking2" />

        <TextView
            android:id="@+id/manSpeaking3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:typeface="normal"
            tools:text="Man Speaking3" />

        <TextView
            android:id="@+id/manSpeaking4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:typeface="normal"
            tools:text="Man Speaking4" />

        <TextView
            android:id="@+id/manSpeaking5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65dp"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:typeface="normal"
            tools:text="Man Speaking5" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>